<% layout('/layout/boilerplate.ejs') -%>

    <body>
        <form method="post" action="/listing/<%=result._id%>/update?_method=PATCH" style="margin-bottom: 20px;" enctype="multipart/form-data">
           

            <div class="mb-3">
                <label class="form-label">ID</label>
                <input type="text" value="<%=result._id%>" disabled class="form-control" class="form-control is-valid" id="validationServer01"  required>
            </div>

            <div class="mb-3">
                <label for="title" class="form-label">title</label>
                <input type="text" value="<%=result.title%>" name="title" class="form-control" required>
            </div>


            <div class="mb-3">
                <label for="description" class="form-label">description</label>
                <input type="text" value="<%=result.description%>" name="description" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Upload image if you want to change image</label>
                <input type="file"  name="image" class="form-control">
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="text" value="<%=result.price%>" name="price" class="form-control" required>
            </div>

            <div class="row g-3">
                <div class="col">
                    <label for="inputCity" class="form-label">City</label>
                    <input type="text" class="form-control" value="<%=result.location%>" name="location" required>
                </div>
                <div class="col">
                    <label for="inputState" class="form-label">Country</label>
                    <input type="text" class="form-control" value="<%=result.country%>" name="country" required>
                </div>
            </div>

            <div class="row g-3">
                <div class="col">
                    <label for="inputCity" class="form-label">Phone-Number</label>
                    <input type="text" class="form-control" value="<%=result.phoneNumber%>" name="phoneNumber" required>
                </div>
                <div class="col">
                    <label for="inputState" class="form-label">Email</label>
                    <input type="text" class="form-control" value="<%=result.Email%>" name="Email" required>
                </div>
            </div>

            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </body>